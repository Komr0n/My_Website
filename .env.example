NODE_ENV=development
PORT=3000
SESSION_SECRET=change-me

# Option 1: full connection string
DATABASE_URL=postgres://user:password@localhost:5432/my_website

# Option 2: separate fields (used if DATABASE_URL is empty)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=my_website
DB_USER=postgres
DB_PASS=password
DB_SSL=false

# Optional logging
DB_LOGGING=false
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# If you use docker-compose, set DB_HOST=db and credentials below.
# DB_HOST=db
# DB_USER=postgres
# DB_PASS=postgres
# DB_NAME=my_website
