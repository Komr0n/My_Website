<%- include('partials/header') %>

<main class="page-container">
    <div class="container">
        <section class="projects-section">
            <h1>My Projects</h1>
            <p class="section-description">Collection of projects showcasing network infrastructure, automation, and security solutions.</p>
            
            <div class="projects-grid">
                <% if (projects && projects.length > 0) { %>
                    <% projects.forEach(project => { %>
                        <div class="project-card">
                            <div class="project-image">
                                <img src="<%= project.image %>" alt="<%= project.title %>">
                            </div>
                            <div class="project-content">
                                <h3><%= project.title %></h3>
                                <p><%= project.description %></p>
                                <div class="project-tech">
                                    <strong>Technologies:</strong>
                                    <div class="tech-tags">
                                        <% const techs = project.technologies.split(',').map(t => t.trim()); %>
                                        <% techs.forEach(tech => { %>
                                            <span class="tech-tag"><%= tech %></span>
                                        <% }); %>
                                    </div>
                                </div>
                                <div class="project-links">
                                    <% if (project.githubLink) { %>
                                        <a href="<%= project.githubLink %>" target="_blank" class="btn btn-small">GitHub</a>
                                    <% } %>
                                    <% if (project.liveLink) { %>
                                        <a href="<%= project.liveLink %>" target="_blank" class="btn btn-small btn-primary">Live Demo</a>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="empty-state">
                        <p>No projects yet. Check back soon!</p>
                    </div>
                <% } %>
            </div>
        </section>
    </div>
</main>

<%- include('partials/footer') %>


