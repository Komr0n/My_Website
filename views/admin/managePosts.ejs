<%- include('partials/adminHeader') %>

<div class="manage-container">
    <div class="manage-header">
        <h2>Manage Posts</h2>
        <a href="/admin/posts/new" class="btn btn-primary">+ Create Post</a>
    </div>

    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Published At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (posts && posts.length > 0) { %>
                    <% posts.forEach(post => { %>
                        <tr>
                            <td><%= post.id %></td>
                            <td><%= post.title %></td>
                            <td><%= post.status === 'published' ? 'Published' : (post.status === 'scheduled' ? 'Scheduled' : 'Draft') %></td>
                            <td><%= post.publishedAt ? new Date(post.publishedAt).toLocaleString('ru-RU', { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' }) : '-' %></td>
                            <td class="actions">
                                <a href="/admin/posts/<%= post.id %>/edit" class="btn btn-small">Edit</a>
                                <form action="/admin/posts/<%= post.id %>?_method=DELETE" method="POST" style="display: inline;" data-confirm="Are you sure?">
                                    <button type="submit" class="btn btn-small btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="text-center">No posts yet. <a href="/admin/posts/new">Create one</a></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('partials/adminFooter') %>
