<%- include('partials/adminHeader') %>

<div class="form-container">
    <h2><%= project ? 'Edit Project' : 'Add New Project' %></h2>
    
    <form method="POST" action="<%= project ? `/admin/projects/${project.id}?_method=PUT` : '/admin/projects' %>" class="edit-form">
        <div class="form-group">
            <label for="title">Title (RU)</label>
            <input type="text" id="title" name="title" value="<%= project ? project.title : '' %>" required>
        </div>

        <div class="form-group">
            <label for="titleEn">Title (EN)</label>
            <input type="text" id="titleEn" name="titleEn" value="<%= project ? (project.titleEn || '') : '' %>" required>
        </div>
        
        <div class="form-group">
            <label for="description">Description (RU)</label>
            <textarea id="description" name="description" rows="4" required><%= project ? project.description : '' %></textarea>
        </div>

        <div class="form-group">
            <label for="descriptionEn">Description (EN)</label>
            <textarea id="descriptionEn" name="descriptionEn" rows="4" required><%= project ? (project.descriptionEn || '') : '' %></textarea>
        </div>
        
        <div class="form-group">
            <label for="technologies">Technologies (RU, comma-separated)</label>
            <input type="text" id="technologies" name="technologies" value="<%= project ? project.technologies : '' %>" placeholder="Python, FastAPI, PostgreSQL" required>
        </div>

        <div class="form-group">
            <label for="technologiesEn">Technologies (EN, comma-separated)</label>
            <input type="text" id="technologiesEn" name="technologiesEn" value="<%= project ? (project.technologiesEn || '') : '' %>" placeholder="Python, FastAPI, PostgreSQL" required>
        </div>
        
        <div class="form-group">
            <label for="image">Image URL</label>
            <input type="text" id="image" name="image" value="<%= project ? project.image : '/images/default-project.png' %>">
        </div>
        
        <div class="form-group">
            <label for="githubLink">GitHub Link</label>
            <input type="url" id="githubLink" name="githubLink" value="<%= project ? project.githubLink : '' %>">
        </div>
        
        <div class="form-group">
            <label for="liveLink">Live Demo Link</label>
            <input type="url" id="liveLink" name="liveLink" value="<%= project ? project.liveLink : '' %>">
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary"><%= project ? 'Update' : 'Create' %> Project</button>
            <a href="/admin/projects" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<%- include('partials/adminFooter') %>




