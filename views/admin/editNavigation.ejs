<%- include('partials/adminHeader') %>

<div class="form-container">
    <form method="POST" action="/admin/navigation?_method=PUT" class="edit-form">
        <div class="form-group">
            <label for="brandText">Brand Text</label>
            <input type="text" id="brandText" name="brandText" value="<%= navigation.brandText %>" required>
        </div>

        <div class="form-group">
            <label for="links">Menu Links (format: Label|URL, one per line)</label>
            <textarea id="links" name="links" rows="8" required><%= linksText %></textarea>
        </div>

        <div class="form-group">
            <label class="checkbox-label" for="showThemeToggle">
                <input
                    id="showThemeToggle"
                    name="showThemeToggle"
                    type="checkbox"
                    <%= navigation.showThemeToggle ? 'checked' : '' %>
                >
                Show theme toggle button in header
            </label>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save Navigation</button>
            <a href="/admin" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<%- include('partials/adminFooter') %>
