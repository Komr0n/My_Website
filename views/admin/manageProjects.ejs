<%- include('partials/adminHeader') %>

<div class="manage-container">
    <div class="manage-header">
        <h2>Manage Projects</h2>
        <a href="/admin/projects/new" class="btn btn-primary">+ Add Project</a>
    </div>

    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Technologies</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (projects && projects.length > 0) { %>
                    <% projects.forEach(project => { %>
                        <tr>
                            <td><%= project.id %></td>
                            <td><%= project.title %></td>
                            <td><%= project.technologies %></td>
                            <td class="actions">
                                <a href="/admin/projects/<%= project.id %>/edit" class="btn btn-small">Edit</a>
                                <form action="/admin/projects/<%= project.id %>?_method=DELETE" method="POST" style="display: inline;" data-confirm="Are you sure?">
                                    <button type="submit" class="btn btn-small btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="text-center">No projects yet. <a href="/admin/projects/new">Add one</a></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('partials/adminFooter') %>
