<%- include('partials/adminHeader') %>

<div class="form-container">
    <form method="POST" action="/admin/about?_method=PUT" enctype="multipart/form-data" class="edit-form">
        <div class="form-group">
            <label for="title">Title (RU)</label>
            <input type="text" id="title" name="title" value="<%= about.title %>" required>
        </div>

        <div class="form-group">
            <label for="titleEn">Title (EN)</label>
            <input type="text" id="titleEn" name="titleEn" value="<%= about.titleEn || '' %>" required>
        </div>
        
        <div class="form-group">
            <label for="content">Subtitle/Content (RU)</label>
            <input type="text" id="content" name="content" value="<%= about.content %>" required>
        </div>

        <div class="form-group">
            <label for="contentEn">Subtitle/Content (EN)</label>
            <input type="text" id="contentEn" name="contentEn" value="<%= about.contentEn || '' %>" required>
        </div>
        
        <div class="form-group">
            <label for="avatar">Avatar</label>
            <% if (about.avatar) { %>
                <div style="margin-bottom: 1rem;">
                    <img src="<%= about.avatar %>" alt="Current avatar" style="max-width: 150px; border-radius: 50%; border: 2px solid #21262d;">
                </div>
            <% } %>
            <input type="file" id="avatar" name="avatar" accept="image/*">
            <small style="color: #8b949e; display: block; margin-top: 0.5rem;">Leave empty to keep current avatar</small>
        </div>
        
        <div class="form-group">
            <label for="skills">Skills (RU, comma-separated)</label>
            <textarea id="skills" name="skills" rows="3" required><%= about.skills %></textarea>
        </div>

        <div class="form-group">
            <label for="skillsEn">Skills (EN, comma-separated)</label>
            <textarea id="skillsEn" name="skillsEn" rows="3" required><%= about.skillsEn || '' %></textarea>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update About</button>
            <a href="/admin" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<%- include('partials/adminFooter') %>



